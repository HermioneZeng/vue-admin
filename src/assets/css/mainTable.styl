@import "variables.styl"

.clearfix::after
  content: ''
  clear: both
  display: block
  visibility: visible

.tabList
  position:absolute
  top:2px
  left:105px
  >span
    display: inline-block
    width: 87px
    height:36px
    background-color: #a1a1a1
    color:#fff
    line-height: 36px
    text-align: center
    font-size:13px
    cursor:pointer
  a
    color:#fff
    display:block;
  .on
    background-color: #599bec

.searchHeader
  height:43px
  line-height: 43px
  padding: 0 15px
  background-color: backgroundColor
  border-bottom:1px solid borderColor
  .btns
    float:right
    margin-top -2px
.searchBox
  position relative
  padding 10px 10px
  .searchBar
    .el-date-editor.el-input .el-input__icon + .el-input__inner
      padding 0 2px

    .el-input__icon.el-icon-date//去掉日期控件的右侧图标
      display none
  #spreadBtn
    color:#747474;
    font-size: 12px;
    cursor: pointer;
    position: absolute;
    right: 20px;
    bottom: 8px

.table
  &::after
    content: ''
    clear: both
    display: block
    visibility: visible
  .table-header
    height:34px;
    line-height:34px;
    padding:5px 15px 5px 0;
    .btn-group
      float:right
    .title
      line-height:1
      padding-left:15px
  .table-header--left
    float left
    span
      display: inline-block
      width: 87px
      height: 36px
      background-color: #a1a1a1
      color: #fff
      line-height: 36px
      text-align: center
      font-size: 14px
      margin-right: 5px
      cursor pointer
      &.on
        background-color:#599bec
 .el-table
  font-size:12px
  .cell,th>div
    padding: 5px
  td
    border-bottom: 0
  th.is-leaf
    border-bottom: 1px solid borderColor

.el-pagination
  float: right;
  margin: 10px 20px 10px 0

.iconButton.el-button--small{
  padding:8px 15px 6px
}







