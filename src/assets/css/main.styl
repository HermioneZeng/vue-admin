@import "variables.styl"

.container
  position: absolute
  top:0
  left:0
  bottom:0
  right:0

.topBar
  position: fixed
  top:0
  left:0
  right:0
  z-index: 2

.content
  position: absolute
  top:topBarHeight
  left:0
  right:0
  bottom:0

.mainBox
  position: absolute
  left: 0
  top:0
  right:0
  bottom:0
  overflow hidden
  overflow-y auto


